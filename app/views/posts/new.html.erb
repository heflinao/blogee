<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.submit "Save" %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form' %>
    </div>
  </div>
</div>
